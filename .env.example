# .env.example

# 🔐 NowPayments API
NOWPAYMENTS_API_KEY=your_nowpayments_api_key

# 🌐 MongoDB Connection URI
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/your_db_name?retryWrites=true&w=majority&appName=Cluster0

# 🔒 Webhook signature validation secret IPN
WEBHOOK_SECRET=your_webhook_secret_key

# 🔧 Server port
PORT=3000

# 📬 Email (SMTP) for notifications
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# 🤖 Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_ADMIN_ID=your_admin_telegram_id

# 🔗 XSID API endpoint
XSID_API_URL=https://your-xsid-domain.com/xs

# 🌍 Base URL of your backend
BASE_URL=http://localhost:3000
